@model EventEase3.Models.Booking

@{
    ViewData["Title"] = "Details";
}

<div class="center-container">
    <h1 style="margin-top: 20px">Details</h1>
</div>

<div class="center-container">
    <div class="container mt-4 p-4 rounded bg-light" style="max-width: 1000px">
        <h4>Booking</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookingId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookingId)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.BookingDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.BookingDate)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Venue)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Venue.VenueName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Event)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Event.EventName)
            </dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model?.BookingId" class="btn btn-primary">Edit</a> |
        <a asp-action="Index">Back</a>
    </div>
</div>
