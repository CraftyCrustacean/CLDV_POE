@model EventEase3.Models.Event

@{
    ViewData["Title"] = "Edit";
}

<div class="container bg-light mt-4 p-4 rounded" style="max-width: 1000px">
    <h4 class="text-center">Edit an Event</h4>
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="p-3">
        <input type="hidden" asp-for="EventId" />

        <div class="mb-3">
            <label asp-for="EventName" class="form-label">Event Name</label>
            <input asp-for="EventName" class="form-control" placeholder="Enter event name" />
        </div>

        <div class="mb-3">
            <label asp-for="EventDesc" class="form-label">Event Description</label>
            <input asp-for="EventDesc" class="form-control" placeholder="Enter event description" />
        </div>

        <div class="mb-3">
            <label asp-for="EventDate" class="form-label">Event Date</label>
            <input asp-for="EventDate" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="EventType" class="form-label">Event Type</label>
            <select asp-for="EventTypeID" class="form-control" asp-items="ViewBag.EventTypes">
                <option value="">Select Event Type</option>
            </select>
        </div>

        <input type="submit" value="Save" class="btn btn-primary" /> |
        <a asp-action="Index">Back</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
