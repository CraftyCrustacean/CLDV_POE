@model EventEase3.Models.Event

@{
    ViewData["Title"] = "Details";
}

<div class="center-container">
    <h1 style="margin-top: 20px">Details</h1>
</div>

<div class="container mt-4 p-4 rounded bg-light" style="max-width: 1000px">
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Event ID:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventId)
        </dd>
        <dt class = "col-sm-2">
            Event Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class = "col-sm-2 text-nowrap" style="overflow: visible">
            Event Description:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventDesc)
        </dd>
        <dt class = "col-sm-2">
            Event Date:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>
        <dt class="col-sm-2">
            Event Type:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventType.EventTypeName)
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model?.EventId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index">Back</a>
</div>
