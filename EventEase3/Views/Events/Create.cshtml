@model EventEase3.Models.Event

@{
    ViewData["Title"] = "Create";
}

<div class="center-container">
    <div class="form-box">
        <h4 class="text-center">Add an Event</h4>
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="p-3">

            <div class="mb-3">
                <label asp-for="EventName" class="form-label"></label>
                <input asp-for="EventName" class="form-control" placeholder="Enter event name" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EventDesc" class="form-label"></label>
                <input asp-for="EventDesc" class="form-control" placeholder="Enter event description" />
                <span asp-validation-for="EventDesc" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EventDate" class="form-label"></label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EventTypeID" class="form-label">Event Type</label>
                <select asp-for="EventTypeID" class="form-control" asp-items="ViewBag.EventTypes">
                    <option value="">-- Select Event Type --</option>
                </select>
                <span asp-validation-for="EventTypeID" class="text-danger"></span>
            </div>

            <input type="submit" value="Submit" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
