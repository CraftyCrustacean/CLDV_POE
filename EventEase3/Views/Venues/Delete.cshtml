@model EventEase3.Models.Venue

@{
    ViewData["Title"] = "Delete";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="center-container">
    <h3 style="margin-top: 20px">Are you sure you want to delete this venue?</h3>
</div>
<div class="container mt-4 p-4 rounded bg-light" style="max-width: 1000px">
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueLocal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueLocal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueCap)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueCap)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueImgURL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueImgURL)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="VenueId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
