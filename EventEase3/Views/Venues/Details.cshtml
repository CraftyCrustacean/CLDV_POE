@model EventEase3.Models.Venue

@{
    ViewData["Title"] = "Details";
}

<div class="center-container">
    <h1 style="margin-top: 20px">Details</h1>
</div>

<div class="container mt-4 p-4 rounded bg-light" style="max-width: 1000px">
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VenueId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VenueId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueLocal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueLocal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueCap)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueCap)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueImgURL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueImgURL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Availability)
        </dt>
        <dd class="col-sm-10">
            @(Model.Availability? "Availabile" : "Unavailable")
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model?.VenueId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index">Back</a>
</div>

